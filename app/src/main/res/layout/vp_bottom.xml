<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:background="@drawable/rounded_top_corners">


    <Space
        android:layout_width="0dp"
        android:layout_height="16dp"/>



    <aaa.sgordon.galleryfinal.viewpager.components.EdgeAwareHorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="insideInset"
        android:scrollIndicators="start|end">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/carousel"
                layout="@layout/vp_bottom_carousel" />
        </FrameLayout>

    </aaa.sgordon.galleryfinal.viewpager.components.EdgeAwareHorizontalScrollView>



    <Space
        android:layout_width="0dp"
        android:layout_height="12dp"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="4dp"/>




    <Space
        android:layout_width="0dp"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <aaa.sgordon.galleryfinal.viewpager.components.EdgeAwareEditText
            android:id="@+id/filename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp"
            android:layout_weight="1"
            android:textSize="22sp"
            android:singleLine="true"
            android:maxLines="1"
            app:edgeScrollCatch="true"
            android:text="AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAdjhbswjhbdjehbAAAAAAAAAAAAAAAAAhjbdjw"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/extension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp"
            android:textSize="22sp"
            android:alpha="0.7"
            android:text=".jpg"/>

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="4dp"/>


    <aaa.sgordon.galleryfinal.viewpager.components.EdgeAwareEditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4dp"

        android:text="@string/lorem_ipsum"
        android:hint="Description..."
        android:inputType="textMultiLine"
        android:maxLines="20"
        android:importantForAutofill="no"
        android:nestedScrollingEnabled="true"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideInset"
        android:scrollIndicators="top|bottom"

        android:alpha="0.6"
        android:background="@null"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:text="AAAAAAAAAAAAAAAAAAfhieuhiduheiwuhsiduhrei3uwhsiudhireuwhsiuhdiruehwisuhdiurehwisuhdiuehiwushdiurheiwuhsdiuhreiuwhiewisduhifruehwisuhddiurhewiushidudhieuwhsiudhieuhwisuhdiuehwisuhdiurheiuwhiduhfrieuhwiduhfiruehiudhiuhreiuhdiuhrieuhdiuhiruehiduhiurheiuhiduhiuhrieuhdiuhiuhi"/>



    <Space
        android:layout_width="0dp"
        android:layout_height="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="2dp"

        android:text="Details"
        android:textSize="22sp"
        android:ellipsize="end"
        android:maxLines="1"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="2dp"/>

    <TextView
        android:id="@+id/creation_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="2dp"
        android:layout_marginHorizontal="4dp"

        android:text="Created:   Unknown"
        android:textSize="18sp"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="2dp"/>

    <TextView
        android:id="@+id/zoning_with_file_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="2dp"
        android:layout_marginHorizontal="4dp"

        android:text="Backup:    Unknown"
        android:textSize="18sp"/>


    <Space
        android:layout_width="0dp"
        android:layout_height="600dp"/>

</LinearLayout>
